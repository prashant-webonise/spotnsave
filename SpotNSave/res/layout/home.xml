<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:arc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <ImageView
        android:id="@+id/im_reg"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/des"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/im_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:contentDescription="@string/des"
        android:src="@drawable/menu"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/sosActiveLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="185dp"
        android:background="@drawable/drawable_sos_button"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:text="@string/next_sos_will_be_sent_in"
                android:textColor="#fff"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <!-- <ImageView -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:layout_centerHorizontal="true" -->
    <!-- android:layout_marginTop="238dp" -->
    <!-- android:contentDescription="@string/des" -->
    <!-- android:src="@drawable/imageprfinner" -->
    <!-- android:visibility="visible" /> -->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:contentDescription="@string/des"
        android:src="@drawable/logo"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:text="@string/spotnsave_is_now_online"
        android:textColor="#825EA8"
        android:textSize="24sp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/im_big"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/des"
        android:padding="20dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/im_emergency1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/des"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_emergency1"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:textSize="9sp"
        android:visibility="gone" />

    <com.makeramen.RoundedImageView
        android:id="@+id/im_shadow_emergency1"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/des"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:src="@drawable/circle"
        android:visibility="gone" >

        <com.makeramen.RoundedImageView
            android:id="@+id/im_cntersos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/des"
            android:visibility="gone" />

        <Button
            android:id="@+id/im_cntersos_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/des"
            android:text="@string/sos"
            android:visibility="gone" />

        <Button
            android:id="@+id/bt_cntersos_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:text="@string/cancel"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/im_emergency3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/tv1"
        android:layout_marginRight="40dp"
        android:layout_marginTop="240dp"
        android:layout_toLeftOf="@+id/idcentrehorizontal"
        android:contentDescription="@string/des"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_emergency3"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/tv1"
        android:layout_marginRight="55dp"
        android:layout_marginTop="255dp"
        android:layout_toLeftOf="@+id/idcentrehorizontal"
        android:gravity="center"
        android:textSize="9sp"
        android:visibility="gone" />

    <com.makeramen.RoundedImageView
        android:id="@+id/im_shadow_emergency3"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_below="@+id/tv1"
        android:layout_marginRight="50dp"
        android:layout_marginTop="252dp"
        android:layout_toLeftOf="@+id/idcentrehorizontal"
        android:contentDescription="@string/des"
        android:visibility="gone" />

    <View
        android:id="@+id/idcentrehorizontal"
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/im_emergency4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/tv1"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="240dp"
        android:layout_toRightOf="@+id/idcentrehorizontal"
        android:contentDescription="@string/des"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_emergency4"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_below="@+id/tv1"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="255dp"
        android:layout_toRightOf="@+id/idcentrehorizontal"
        android:gravity="center"
        android:textSize="9sp"
        android:visibility="gone" />

    <com.makeramen.RoundedImageView
        android:id="@+id/im_shadow_emergency4"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_below="@+id/tv1"
        android:layout_marginLeft="52dp"
        android:layout_marginTop="252dp"
        android:layout_toRightOf="@+id/idcentrehorizontal"
        android:contentDescription="@string/des"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/im_emergency2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/im_big"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="100dp"
        android:contentDescription="@string/des"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_emergency2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/im_big"
        android:layout_below="@+id/tv1"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="115dp"
        android:gravity="center"
        android:textSize="9sp"
        android:visibility="gone" />

    <com.makeramen.RoundedImageView
        android:id="@+id/im_shadow_emergency2"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignLeft="@+id/im_big"
        android:layout_below="@+id/tv1"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="111dp"
        android:contentDescription="@string/des"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/im_emergency5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignRight="@+id/im_big"
        android:layout_below="@+id/tv1"
        android:layout_marginTop="100dp"
        android:contentDescription="@string/des"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_emergency5"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignRight="@+id/im_big"
        android:layout_below="@+id/tv1"
        android:layout_marginRight="17dp"
        android:layout_marginTop="115dp"
        android:gravity="center"
        android:textSize="9sp"
        android:visibility="gone" />

    <com.makeramen.RoundedImageView
        android:id="@+id/im_shadow_emergency5"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_alignRight="@+id/im_big"
        android:layout_below="@+id/tv1"
        android:layout_marginRight="12dp"
        android:layout_marginTop="111dp"
        android:contentDescription="@string/des"
        android:visibility="gone" />

    <Button
        android:id="@+id/bt_location"
        style="?android:attr/textAppearanceSmall"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/white_bg"
        android:padding="10dp"
        android:text="@string/my_location"
        android:textColor="@color/primary_color" />

    <com.capricorn.ArcMenu
        android:id="@+id/im_centreprofile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/im_settings"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        arc:childSize="65dp"
        arc:fromDegrees="72.0"
        arc:toDegrees="360.0" >
    </com.capricorn.ArcMenu>

    <TextView
        android:id="@+id/txtViewGuardiansAdded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bt_location"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:gravity="center"
        android:padding="10dp" />

    <TextView
        android:id="@+id/txtbattery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtViewGuardiansAdded"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp" />

</RelativeLayout>